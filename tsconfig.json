{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@config": ["config"],
      "@type/*": ["types/*"],
      "@comps/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@vendor/*": ["vendor/*"]
    }
  },
  "include": [
    "node_modules/.pnpm/markdown-it-code-block@0.1.0_markdown-it@14.1.0_prismjs@1.29.0/node_modules/prismjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.ts",
    "postcss.config.js",
    "windi.config.js",
    "next-site.js"
  ],
  "exclude": ["node_modules"]
}
